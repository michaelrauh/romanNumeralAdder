#include "roman_converter.h"

#test addRomanNumeralsSimpleCase
  ck_assert_str_eq(add_roman("I", "I"), "II");
  ck_assert_str_eq(add_roman("I", "II"), "III");
  ck_assert_str_eq(add_roman("XXX", "XXX"), "LX");
  ck_assert_str_eq(add_roman("XXX", "XXIX"), "LIX");

#test addRomanNumeralsOverflowCase
  ck_assert_str_eq(add_roman("MMM", "MMM"), INVALID);

#test subtractRomanNumeralSimpleCase
  ck_assert_str_eq(subtract_roman("II", "I"), "I");
  ck_assert_str_eq(subtract_roman("MCXVI", "XX"), "MXCVI");

#test subtractRomanNumeralUnderflowCase
  ck_assert_str_eq(subtract_roman("I", "II"), INVALID);

#test addBadSymbolsCase
  ck_assert_str_eq(add_roman("I", "N"), INVALID);
  ck_assert_str_eq(add_roman("N", "I"), INVALID);

#test subtractBadSymbolsCase
  ck_assert_str_eq(subtract_roman("I", "N"), INVALID);
  ck_assert_str_eq(subtract_roman("N", "I"), INVALID);
